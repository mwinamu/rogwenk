
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="login-box" >

    <div class="login-box-body" >
        <p class="login-box-msg" style="color:black">Sign in to start your session</p>
        <form method="post" action="/Account/Login">
            <div class="form-group has-feedback">
                <input asp-for="Input.Email" name="Email" value="@TempData["email"]" type="email" class="form-control" placeholder="Email" required>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Input.Email" class="help-block"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Password" name="Password" type="password" class="form-control" placeholder="Password" required>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Input.Password" class="help-block"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    @if (@TempData["LOGIN"] == "LOGIN")
                    {

                            <div class="alert alert-danger alert-dismissible mainbox  col-md-12 " >
                                @TempData["message"]
                            </div>

                    }
                </div>
                
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label style="color:white">
                            <a href="/Account/Register" style="color:#F36B2C"> Register a new user
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4 pull-right">
                    <button type="submit" class="btn btn-block btn-flat" style="background-color:#F36B2C;color:white">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <!-- /.social-auth-links -->
        @*<a asp-page="./ForgotPassword" style="color:white">I forgot my password</a><br>*@
    </div>
</div>
<!-- /.login-box-body -->
