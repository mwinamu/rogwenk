                                <div class="row">
                                    <div class="col-md-3">
                                        <label>ROUTE:</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input id="eRoute" class="form-control validate-required" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>TERRITORY:</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input id="eTerritory" class="form-control validate-required" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>LOCATION:</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input id="eLocation" class="form-control validate-required" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a id="submitEditShop" class="btn btn-Ocelot">SAVE</a>
                </div>
            </div>

        </div>
    </div>
    <!-- assign shop -->
    <div id="assignShopModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">ASSIGN SHOP</h4>
                </div>
                <div class="modal-body">
                    <form id="assignShopForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label>SHOP:</label>
                                    </div>
                                    <div class="col-md-10">
